<script type="text/javascript">

  <% buttonList.forEach(function(btn){ %>
    document.getElementById("<%=btn.name%>").classList.add("disabled");
  <% }) %>

  document.getElementById(<%=qnNoToEdit%>).classList.remove("disabled");

</script>


