  <!-- Right side of home page -->
  <div class="col-lg-3 quiz-info">

    <!-- Scores section (top) -->
    <div class="quiz-info-top">

      <form class="input-group mb-3 team-area" action="/scores" method="post">
        <div class="input-group-prepend">
          <button type="submit" class="input-group-text team-name">Team A &nbsp;</button>
        </div>
        <input type="text" class="form-control" autocomplete="off" name="teamA" value=<%=scoreA%>>
      </form>
      <div class="power-ups">
        <form action="/powerup" method="post">
          <button type="submit" class="btn btn-secondary power-up-btn" id="p1a" name="name" value="p1a">p1a</button>
          <button type="submit" class="btn btn-secondary power-up-btn" id="p1b" name="name" value="p1b">p1b</button>
          <button type="submit" class="btn btn-secondary power-up-btn" id="p1c" name="name" value="p1c">p1c</button>
        </form>
      </div>

      <form class="input-group mb-3 team-area" action="/scores" method="post">
        <div class="input-group-prepend">
          <button type="submit" class="input-group-text team-name">Team B &nbsp;</button>
        </div>
        <input type="text" class="form-control" autocomplete="off" name="teamB" value=<%=scoreB%>>
      </form>
      <div class="power-ups">
        <form action="/powerup" method="post">
          <button type="submit" class="btn btn-secondary power-up-btn" id="p2a" name="name" value="p2a">p2a</button>
          <button type="submit" class="btn btn-secondary power-up-btn" id="p2b" name="name" value="p2b">p2b</button>
          <button type="submit" class="btn btn-secondary power-up-btn" id="p2c" name="name" value="p2c">p2c</button>
        </form>
      </div>

    </div>

    <!-- Tools section (bottom) -->
    <div class="quiz-info-bottom">

      <div class="btn-group dropup edit-btn">

        <button type="button" class="btn btn-secondary dropdown-toggle edit-btn" data-toggle="dropdown">
          Edit
        </button>

        <div class="dropdown-menu edit-form">
          <form class="form-inline" action="/edit" method="post">
            <input type="text" class="form-control edit-input" name="qnToEdit" placeholder="eg. a2, d5, p2b" autocomplete="off">
            <div class="input-group-append edit-submit">
              <button class="btn btn-outline-secondary" type="submit">
                <img id="tick-img" src="/images/tick.svg" alt="tick-img">
              </button>
            </div>
          </form>
        </div>

      </div>

      <div class="btn-group dropup reset-btn">

        <button type="button" class="btn btn-secondary dropdown-toggle reset-btn" data-toggle="dropdown">
          Reset
        </button>

        <div class="dropdown-menu reset-form">
          <form action="/reset" method="post">
            <button type="submit" class="btn confirm-reset">Confirm Reset?</button>
          </form>
        </div>

      </div>

    </div>

  </div>

